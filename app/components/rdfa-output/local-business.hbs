{{#if @renderSnippet}}
  {{{this.rdfaSnippet}}}
{{else}}
  <pre>
    <code>
      {{this.rdfaSnippet}}
    </code>
  </pre>
  <CopyButton
    class="ember-view au-c-button au-c-button--secondary"
    @clipboardText={{this.rdfaSnippet}}
    title="Klik om code te kopiëren!"
  >
    Klik om code te kopiëren!
  </CopyButton>
{{/if}}
